<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/space">

    <Button
        android:id="@+id/btn_overview"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="48dp"
        android:onClick="overview"
        android:text="OVERVIEW"
        app:layout_constraintStart_toEndOf="@+id/btn_honours"
        app:layout_constraintTop_toBottomOf="@+id/btn_pec" />

    <Button
        android:id="@+id/btn_sem1"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="108dp"
        android:onClick="sem_12"
        android:text="SEM 1/2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="SEM 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem1"
        android:onClick="sem3"
        style="@style/CustomButtonStyle"/>

    <Button
        android:id="@+id/btn_sem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:text="SEM 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem3"
        android:onClick="sem4"
        style="@style/CustomButtonStyle"/>

    <Button
        android:id="@+id/btn_sem5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:text="SEM 5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem4"
        android:onClick="sem5"
        style="@style/CustomButtonStyle"/>

    <Button
        android:id="@+id/stn_sem6"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="108dp"
        android:onClick="sem6"
        android:text="SEM 6"
        app:layout_constraintStart_toEndOf="@+id/btn_sem1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sem7"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="60dp"
        android:onClick="sem7"
        android:text="SEM 7"
        app:layout_constraintStart_toEndOf="@+id/btn_sem3"
        app:layout_constraintTop_toBottomOf="@+id/stn_sem6" />

    <Button
        android:id="@+id/btn_sem8"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="52dp"
        android:onClick="sem8"
        android:text="SEM 8"
        app:layout_constraintStart_toEndOf="@+id/btn_sem4"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem7" />

    <Button
        android:id="@+id/btn_pec"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="52dp"
        android:onClick="pec"
        android:text="PEC"
        app:layout_constraintStart_toEndOf="@+id/btn_sem5"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem8" />

    <Button
        android:id="@+id/btn_honours"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:onClick="honours"
        android:text="HONOURS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sem5" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="DOWNLOAD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_honours"
        app:layout_constraintVertical_bias="0.207"
        android:onClick="download"
        style="@style/CustomButtonStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>